<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/create_an_a"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:text="@string/create_an_a"
        android:textStyle="bold"
        android:textAppearance="@style/create_an_a"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_to"
        android:layout_width="285dp"
        android:layout_height="21dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="@string/register_to"
        android:textAppearance="@style/register_to"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/fullName"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="214dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1sp"
        android:text="Full Name"
        android:textStyle="bold"
        android:textAppearance="@style/email_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_to" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:drawablePadding="5dp"
        android:hint=" Surname"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toStartOf="@id/firstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="174dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        android:hint=" First Name"
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        app:layout_constraintBottom_toTopOf="@id/middleName"
        app:layout_constraintEnd_toEndOf="parent"
         />


    <EditText
        android:id="@+id/middleName"
        android:layout_width="201dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape"
        android:hint=" Middle Name"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname" />

    <EditText
        android:id="@+id/enterConfirmAccessCode"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:background="@drawable/shape"
        android:hint=" Select an option   "
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/selectGender"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



    <EditText
        android:id="@+id/enterRegNumber"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:background="@drawable/shape"
        android:hint=" Enter your Registration Number "
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/fillRegistrationNo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/fillRegistrationNo"
        android:layout_width="214dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1sp"
        android:text="Registration Number"
        android:textStyle="bold"
        android:textAppearance="@style/email_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterConfirmAccessCode" />


    <TextView
        android:id="@+id/selectGender"
        android:layout_width="214dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1sp"
        android:text="Select Gender **"
        android:textStyle="bold"
        android:textAppearance="@style/email_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleName" />




    <Button
        android:id="@+id/register_to_btn"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:background="@drawable/backbutton"
        android:gravity="center_horizontal|center_vertical"
        android:text="Register"
        android:textAppearance="@style/continue_style"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/enterRegNumber"
        app:layout_constraintStart_toStartOf="parent"
         />


    <TextView
        android:id="@+id/don_t_have_"
        android:layout_width="319dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-1sp"
        android:text="Already have an account ?"
        android:textAppearance="@style/don_t_have_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/alreadyHaveLogin"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-1sp"
        android:text="LOGIN "
        android:textAppearance="@style/don_t_have_a"
        android:textColor="#027426"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_to_btn"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>