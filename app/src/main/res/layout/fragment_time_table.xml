<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TimeTable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="9dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Table Schedule "
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/level_1"
            android:layout_width="400dp"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/onelevel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/level_2"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:src="@drawable/twolevel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level_1"/>

        <ImageView
            android:id="@+id/level_3"
            android:layout_width="400dp"
            android:layout_height="170dp"
            android:src="@drawable/threelevel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level_2"/>

        <ImageView
            android:id="@+id/level_4"
            android:layout_width="400dp"
            android:layout_height="170dp"
            android:src="@drawable/fourlevel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level_3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>