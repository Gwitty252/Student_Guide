<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.OurLectures">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lecture_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/lectureimage1"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
           android:id="@+id/otherStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHER ACADEMIC STAFF "
            android:textStyle="bold"
            android:textColor="@color/green"
            android:lineSpacingExtra="1sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
           app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lecture_image" />



        <ImageView
            android:id="@+id/lecture_image2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/lectureimage3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lecture_image"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>