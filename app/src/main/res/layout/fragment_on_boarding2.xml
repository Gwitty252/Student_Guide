<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboarding.OnBoarding2">



    <TextView
        android:id="@+id/grade_point"
        android:layout_width="302dp"
        android:layout_height="34dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/ibm_plex_sans_bold"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/second_slide_title"
        android:textAppearance="@style/grade_point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/we_help_you"
        android:layout_width="273dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="2sp"
        android:text="@string/second_slide_desc"
        android:textAppearance="@style/we_help_you"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade_point" />

    <ImageView
        android:id="@+id/people_talk"
        android:layout_width="287.14dp"
        android:layout_height="263.19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:background="#00000000"
        android:src="@drawable/peopletalking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/we_help_you" />






</androidx.constraintlayout.widget.ConstraintLayout>