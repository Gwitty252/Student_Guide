<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CheckResetCode">

    <ImageView
        android:id="@+id/message"
        android:layout_width="308dp"
        android:layout_height="200dp"
        android:layout_marginTop="228dp"
        android:foregroundGravity="center"
        android:src="@drawable/message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/senLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="1sp"
        android:text="A link has been sent to gideonsunday73@gmail.com, \n please follow the instructions given"
        android:textAppearance="@style/hang_out_yo"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <Button
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:background="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/senLink"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:paddingLeft="100dp"
        android:textStyle="bold"
        android:text="Back to Login "/>










</androidx.constraintlayout.widget.ConstraintLayout>